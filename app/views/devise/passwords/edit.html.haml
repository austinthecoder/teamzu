%h2 Change your password

= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:id => 'change_password', :method => :put} do |f|
  = devise_error_messages!
  
  = f.hidden_field :reset_password_token
  
  %div= f.label :password
  %p= f.password_field :password
  
  %div= f.label :password_confirmation
  %p= f.password_field :password_confirmation
  
  %p= f.submit "Change my password"
