%h2 Sign in

= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "sign_in"} do |f|
  %div= f.label :email
  %p= f.text_field :email
  
  %div= f.label :password
  %p
    = f.password_field :password, :size => 20
    = link_to "Forgot?", new_password_path(resource_name)
      
  %div
    = submit_button "Sign in"
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me