!!!
%html
  %head
    %title Teamzu
    %meta{:name => "viewport", :content => "user-scalable=no, width=device-width"}
    = csrf_meta_tag
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js', 'application'
%body
  #header
    %h1= link_to 'Teamzu', root_path
    %p#user_menu
      - if user_signed_in?
        = link_to 'My Teams', teams_path
        |
        = link_to 'My Account', edit_user_registration_path
        |
        = link_to 'Sign Out', destroy_user_session_path
      - else
        = link_to 'Sign Up', new_user_registration_path
        |
        = link_to 'Sign In', new_user_session_path
    .clear
  
  #main
    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert
    
    = yield
  
  #footer
    %p
      &copy;
      = Time.zone.now.year
      = link_to('Austin Schneider', 'http://www.austinschneider.com', :title => 'Me!!') + '.'
      Some rights reserved.